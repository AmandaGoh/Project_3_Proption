<div class="container">

    <div class="row">

      <h1>ALL LISTINGS</h1>

      <div class="col-md-3">
        <form action="#" method="get">

          <div class="input-group">

            <!-- SEARCH BAR -->
            <input class="form-control" id="system-search" name="q" placeholder="Search all listings..." required>
            <span class="input-group-btn">
                          <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                      </span>

          </div>

        </form>
      </div>



      <div class="col-md-4">
        <table class="table table-list-search">

          <thead>
            <tr>
              <th>
                <p>Listings:</p>
              </th>
            </tr>
          </thead>



          <tbody>


            <% @listings.each do |listing| %>

            <tr>
              <td>
                <div class="col-lg-12 col-md-3 col-sm-6 col-xs-6 col-xxs-12">
                  <article class="aa-properties-item">

                    <!-- <a class="aa-properties-item-img popular featured_img">
                      <img src="house2.jpg" class="featured_img" alt="img">
                    </a> -->
                    <%= link_to listing.picture, listing_path(listing) %>
                    <a class="aa-properties-item-img popular featured_img" alt="property image" width='314' height='200'>
                    <!-- <%= listing.picture %> -->
                    </a>
                    <div class="aa-properties-item-content">

                      <!-- <div class="aa-properties-info">
                        <span class="icons"><image src="bed.png"><b> 4</b></span>
                        <span class="icons"><image src="bath.png"><b> 3</b></span>
                        <span class="icons pull-right"><b> 1200 sqft</b></span>
                      </div> -->

                      <div class="aa-properties-about">

                        <h3 class="propname"><%= link_to listing.name, listing_path(listing.listing) %></h3>


                        <p><%= listing.description %></p>

                      </div>

                      <% if listing.listing.bids.exists? %>

                      <div class="aa-properties-detial">
                        <span>Last Bid: <b class="bidlast"><%= listing.listing.bids.last.bid_amount %></b></span>
                        <span class="pull-right"><%= listing.listing.bids.length %> Bids</span>
                        <br>
                        <span>Ends: <b><%= listing.listing.duration %></b></span>
                        <button type="button" class="btn btn-danger btn-md pull-right bidnow">
                        <span class="glypicon glyphicon glyphicon-ice-lolly"></span>
                        Bid Now
                        </button>
                      </div>

                      <% else %>

                  <div class="aa-properties-detial">
                    <span>Last Bid: <b class="bidlast">No bids yet</b></span>
                    <span class="pull-right">0 Bids</span>
                    <br>
                    <span>Ends: <b><%= listing.listing.duration.in_time_zone("Singapore") %></b></span>
                    <button type="button" class="btn btn-danger btn-md pull-right bidnow">
                    <span class="glypicon glyphicon glyphicon-ice-lolly"></span>
                    Bid Now
                    </button>
                  </div>

                      <% end %>

                    </div>

                  </article>
                </div>
              </td>
            </tr>

          <% end %>

          </tbody>

        </table>
      </div>



    </div>
  </div>
