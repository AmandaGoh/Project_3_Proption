<div class="container">
<h2>Sign Up and Start Bidding</h2>
<hr>

<div class="row">
  <div class="col-md-9 personal-info">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <form class="form-horizontal" role="form">

    <div class="form-group">
    <%= f.label :name, class: "col-lg-3 control-label"%>
    <div class="col-md-8">
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
    <br />
  </div>
  </div>

  <div class="form-group">
  <%= f.label :username, class: "col-lg-3 control-label"%>
  <div class="col-md-8">
  <%= f.text_field :username, autofocus: true, class: "form-control" %>
  <br />
  </div>
  </div>

  <div class="form-group">
  <%= f.label :contact_number, class: "col-lg-3 control-label"%>
  <div class="col-md-8">
  <%= f.telephone_field :contact_number, autofocus: true, class: "form-control" %>
  <br />
  </div>
  </div>

  <div class="form-group">
  <%= f.label :email, class: "col-lg-3 control-label"%>
  <div class="col-md-8">
  <%= f.email_field :email, autofocus: true, class: "form-control" %>
  <br />
</div>

<div class="form-group">
<%= f.label :password, class: "col-lg-3 control-label"%>

<div class="col-md-8">
<%= f.password_field :password,class: "form-control",  placeholder: "6 characters minimum"%>
<br/>
</div>
</div>

<div class="form-group">
<%= f.label :password_confirmation, class: "col-lg-3 control-label"%>
<div class="col-md-8">
<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
<br />
</div>
</div>

<div class="form-group">
  <label class="col-md-3 control-label"></label>
  <div class="col-md-8">
    <%= f.submit "Sign up", class: "btn btn-primary" %>

    <span></span>
    <%= link_to "Log in", new_user_session_path, class: "btn btn-default" %>

  </div>

<% end %>

</div>


</div>
</form>
</div>
</div>
</div>
