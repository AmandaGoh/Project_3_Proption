<div class="container">
    <div class="row">

      <h1>HISTORY OF BIDS RECEIVED FOR LISTING </h1>


      <div class="col-md-3">
        <form action="#" method="get">
          <div class="input-group">
            <!-- SEARCH BAR -->
            <input class="form-control" id="system-search" name="q" placeholder="Search bid history..." required>
            <span class="input-group-btn">
            <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
            </span>
          </div>
        </form>
      </div>

      <div class="col-md-9">
        <table class="table table-list-search">
          <thead>
            <tr>
              <th>No.</th>
              <th>Bid Date/Time</th>
              <th>Bid Amount</th>
              <th>Bidder User Name</th>
            </tr>
          </thead>
          <tbody>

              <% if @bid_info_for_listing.exists? %>
                  <% @bid_info_for_listing.each_with_index do |bid_info, index| %>
                    <tr>
                      <td> <%= index + 1 %> </td>
                      <td> <%= bid_info.created_at %> </td>
                      <td>$<%= number_with_delimiter(bid_info.bid_amount) %> </td>
                      <td> <%= bid_info.bidder.username %> </td>
                    </tr>
                  <% end %>

              <% else %>
                  <tr>
                    <td>No bids found</td>
                  </tr>
              <% end %>

          </tbody>
        </table>
      </div>

    </div>
  </div>
