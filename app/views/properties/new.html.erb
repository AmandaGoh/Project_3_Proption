<div class='container'>
<h1>Property Creation Page</h1>

<!-- form for -->
<%= form_for @property do |f| %>

<p>
<%= f.label :'Property Name' %><br>
<%= f.text_field :name %><br>
</p>

<p>
  <%= f.label :'Property Type' %><br>
  <%= f.select :prop_type, ['Landed', 'Condominium']%>
</p>

<p>
<%= f.label :address %><br>
<%= f.text_field :address %><br>
</p>

<p>
<%= f.label :postal_code %><br>
<%= f.text_field :postal_code %><br>
</p>

<p>
  <%= f.label :tenure %><br>
  <%= f.select :tenure, ['Freehold', '999', '99']%>
</p>

<p>
<%= f.label :size %><br>
<%= f.text_field :size %><br>
</p>

<p>
  <%= f.label :'Reserve Price' %><br>
  <%= f.text_field :reserve_price %>
</p>

<p>
<%= f.label :description %><br>
<%= f.text_area :description %><br>
</p>

<p>
  <%= f.label :'Property Photographs' %><br>
  <%= f.file_field :picture %>
</p>

<p>
<%= f.hidden_field :seller_id, value: current_user.id %>
</p>

<p>
<%= f.hidden_field :listed, value: 0 %>
</p>


<p>
  <%= f.submit "Submit" %>
</p>
<% end %>

