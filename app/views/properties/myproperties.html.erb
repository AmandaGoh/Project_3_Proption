<div class="container">
    <div class="row">
      <h1>MY PROPERTIES - Not listed for bidding yet.</h1>

      <div class="col-md-3">
        <form action="#" method="get">
          <div class="input-group">
            <!-- SEARCH BAR -->
            <input class="form-control" id="system-search" name="q" placeholder="Search my properties..." required>
            <span class="input-group-btn">
                          <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                      </span>
          </div>
        </form>
        <br>

        <a><%= link_to "+ Create New Property" , new_property_path, :class => 'btn btn-primary btn-md' %></a>

      </div>

      <div class="col-md-9">
        <table class="table table-list-search">
          <thead>
            <tr>
              <th>Title</th>
              <th>Picture</th>
              <th>Property Type</th>
              <th>Address</th>
              <th>Postal Code</th>
              <th>Reserve Price</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>

  <% @my_properties.each do |property| %>


            <tr>
              <td><a href="#"><%= property.name  %></a></td>
              <td>
                <a href="#">
                  <%= image_tag(property.picture_url, width: 120) if property.picture.present? %>
                </a>
              </td>
              <td><%= property.prop_type  %></td>
              <td><%= property.address  %></td>
              <td><%= property.postal_code  %></td>
              <td>$<%= property.reserve_price  %></td>
              <td>
                <div class="pull-left">
                  <button type="button" class="btn btn-primary btn-md" data-toggle="tooltip" data-placement="left" title="Edit Property">

                  <span class="glypicon glyphicon glyphicon-edit"></span>
                  </button>

                  <a><%= link_to "edit" , edit_property_path(property), :class => 'btn btn-primary btn-md' %></a>



                  <button type="button" class="btn btn-danger btn-md" data-toggle="tooltip" data-placement="top" title="Delete Property">
                  <span class="glypicon glyphicon glyphicon-trash"></span>
                  </button>
                  <button type="button" class="btn btn-success btn-md" data-toggle="tooltip" data-placement="right" title="Submit For Auction">
                  <span class="glypicon glyphicon glyphicon-send"></span>
                  </button>
                </div>
              </td>
            </tr>

    <% end %>

            <tr>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>

    </div>
  </div>
