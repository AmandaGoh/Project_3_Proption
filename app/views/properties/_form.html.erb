<div class='container'>

<%= form_for(property) do |f| %>

  <% if property.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

        <ul>
        <% property.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
  <% end %>

  <div class="field">
    <%= f.label :'Property Name' %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :'Property Type' %>
    <%= f.select :prop_type, ['Landed', 'Condominium'] %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :tenure %>
    <%= f.select :tenure, ['Freehold', '999', '99'] %>
  </div>

  <div class="field">
    <%= f.label :size %>
    <%= f.text_field :size %>
  </div>

  <div class="field">
    <%= f.label :'Reserve Price' %>
    <%= f.text_field :reserve_price, :value => number_with_delimiter(f.object.reserve_price) %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <a href="#">
      <%= image_tag(property.picture_url, width: 120, height:100) if property.picture.present? %>
    </a>
  </div>

  <div class="field">
    <%= f.label :'Property Photographs' %><br>
    <%= f.file_field :picture %>
  </div>

  <div class="field">
    <%= f.hidden_field :seller_id, value: current_user.id %>
  </div>

  <div class="field">
    <%= f.hidden_field :listed, value: 0 %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

</div>
